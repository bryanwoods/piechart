<h1>MAKE A FUCKIN' PIE CHART</h1>


<% form_remote_for :chart, :url => charts_path, :html => { :id => 'chart_form' },	
	:before   => %(Element.show('spinner'), (Element.hide('thing'))),
    :success  => %(Element.hide('spinner'), (Element.show('thing'))) do |f| %>

  <p>
    <%= f.label :chart_title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :first_thing_to_graph %><br />
    <%= f.text_field :thing1 %>
	<%= f.label :how_many? %>
	<%= f.text_field :thing1amount %>
  </p>
  <p>
    <%= f.label :second_thing_to_graph %><br />
    <%= f.text_field :thing2 %>
	<%= f.label :how_many? %>
	<%= f.text_field :thing2amount %>
  </p>
  <p>
    <%= f.label :third_thing_to_graph %><br />
    <%= f.text_field :thing3 %>
	<%= f.label :how_many? %>
	<%= f.text_field :thing3amount %>
  </p>
  <p>
    <%= f.label :fourth_thing_to_graph %><br />
    <%= f.text_field :thing4 %>
	<%= f.label :how_many? %>
	<%= f.text_field :thing4amount %>
  </p>
  <p>
    <%= f.label :fifth_thing_to_graph %><br />
    <%= f.text_field :thing5 %>
	<%= f.label :how_many? %>
	<%= f.text_field :thing5amount %>
  </p>
  <p>
    <%= f.submit "MAKE A FUCKIN' PIE CHART" %><%= image_tag 'spinner.gif', :id => 'spinner', :style => 'display:none' %>
  </p>
<% end %>

<div id="thing" style="display:none">
<%= render :partial => 'thing' %>
</div>
